<%= form_with(model: trade) do |form| %>
  <% if trade.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(trade.errors.count, "error") %> prohibited this trade from being saved:</h2>

      <ul>
        <% trade.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :ticker, style: "display: block" %>
    <%= form.text_field :ticker %>
  </div>

  <div>
    <%= form.label :trade_type, style: "display: block" %>
    <%= form.select :trade_type, Trade.trade_types.keys.map { |t| [t.titleize, t]}, {}, { id: 'trade_type_select' }  %>
  </div>

  <div>
    <%= form.label :entry_price, style: "display: block" %>
    <%= form.number_field :entry_price, step:0.01 %>
  </div>

  <div>
    <%= form.label :exit_price, style: "display: block" %>
    <%= form.number_field :exit_price, step:0.01 %>
  </div>

  <div>
    <%= form.label :shares, style: "display: block" %>
    <%= form.number_field :shares %>
  </div>

  <div>
    <%= form.label :traded_on, style: "display: block" %>
    <%= form.date_field :traded_on %>
  </div>

  <div>
    <%= form.label :entry_datetime, style: "display: block" %>
    <%= form.datetime_field :entry_datetime %>
  </div>

  <div>
    <%= form.label :exit_datetime, style: "display: block" %>
    <%= form.datetime_field :exit_datetime %>
  </div>

  <div>
    <%= form.label :notes, style: "display: block" %>
    <%= form.textarea :notes %>
  </div>

  <div>
    <%= form.label :option_type, style: "display: block" %>
    <%= form.text_field :option_type %>
  </div>

  <div>
    <%= form.label :strike_price, style: "display: block" %>
    <%= form.text_field :strike_price %>
  </div>

  <div>
    <%= form.label :expiration_date, style: "display: block" %>
    <%= form.date_field :expiration_date %>
  </div>

  <div>
    <%= form.label :contracts, style: "display: block" %>
    <%= form.number_field :contracts %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
